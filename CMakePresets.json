{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "default",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
      },
      "inherits": [
        "ninja"
      ],
      "hidden": true
    },
    {
      "name": "clang15",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-15",
        "CMAKE_CXX_COMPILER": "clang++-15"
      },
      "inherits": [
        "default"
      ],
      "hidden": true
    },
    {
      "name": "clang16",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-16",
        "CMAKE_CXX_COMPILER": "clang++-16"
      },
      "inherits": [
        "default"
      ],
      "hidden": true
    },
    {
      "name": "clang17",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-17",
        "CMAKE_CXX_COMPILER": "clang++-17"
      },
      "inherits": [
        "default"
      ],
      "hidden": true
    },
    {
      "name": "gcc12",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc-12",
        "CMAKE_CXX_COMPILER": "g++-12"
      },
      "inherits": [
        "default"
      ],
      "hidden": true
    },
    {
      "name": "gcc13",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc-13",
        "CMAKE_CXX_COMPILER": "g++-13"
      },
      "inherits": [
        "default"
      ],
      "hidden": true
    },
    {
      "name": "mscv",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      },
      "inherits": [
        "default"
      ],
      "hidden": true
    },
    {
      "name": "debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "hidden": true
    },
    {
      "name": "release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": true
      },
      "hidden": true
    },
    {
      "name": "rwdi",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": true
      },
      "hidden": true
    },
    {
      "name": "msr",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": true
      },
      "hidden": true
    },
    {
      "name": "gcc12-release-x64-libstdc++",
      "displayName": "gcc12 Release x64 libstdc++",
      "description": "Sets Ninja generator, compilers, x64 architecture, build and install directory, release build type",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "inherits": [
        "gcc12"
      ]
    },

    { "name": "mscv-x64-debug", "description": "mscv for x64 (Debug)", "inherits": [ "mscv", "debug" ] },
    { "name": "mscv-x64-release", "description": "mscv for x64 (Release)", "inherits": [ "mscv", "release" ] },
    { "name": "mscv-x64-rwdi", "description": "mscv for x64 (RelWithDebInfo)", "inherits": [ "mscv", "rwdi" ] },
    { "name": "mscv-x64-msr", "description": "mscv for x64 (MinSizeRel)", "inherits": [ "mscv", "msr" ] },

    { "name": "gcc12-x64-debug", "description": "gcc12 for x64 (Debug)", "inherits": [ "gcc12", "debug" ] },
    { "name": "gcc12-x64-release", "description": "gcc12 for x64 (Release)", "inherits": [ "gcc12", "release" ] },
    { "name": "gcc12-x64-rwdi", "description": "gcc12 for x64 (RelWithDebInfo)", "inherits": [ "gcc12", "rwdi" ] },
    { "name": "gcc12-x64-msr", "description": "gcc12 for x64 (MinSizeRel)", "inherits": [ "gcc12", "msr" ] },

    { "name": "gcc13-x64-debug", "description": "gcc13 for x64 (Debug)", "inherits": [ "gcc13", "debug" ] },
    { "name": "gcc13-x64-release", "description": "gcc13 for x64 (Release)", "inherits": [ "gcc13", "release" ] },
    { "name": "gcc13-x64-rwdi", "description": "gcc13 for x64 (RelWithDebInfo)", "inherits": [ "gcc13", "rwdi" ] },
    { "name": "gcc13-x64-msr", "description": "gcc13 for x64 (MinSizeRel)", "inherits": [ "gcc13", "msr" ] },

    { "name": "clang15-x64-debug", "description": "clang15 for x64 (Debug)", "inherits": [ "clang15", "debug" ] },
    { "name": "clang15-x64-release", "description": "clang15 for x64 (Release)", "inherits": [ "clang15", "release" ] },
    { "name": "clang15-x64-rwdi", "description": "clang15 for x64 (RelWithDebInfo)", "inherits": [ "clang15", "rwdi" ] },
    { "name": "clang15-x64-msr", "description": "clang15 for x64 (MinSizeRel)", "inherits": [ "clang15", "msr" ] },

    { "name": "clang16-x64-debug", "description": "clang16 for x64 (Debug)", "inherits": [ "clang16", "debug" ] },
    { "name": "clang16-x64-release", "description": "clang16 for x64 (Release)", "inherits": [ "clang16", "release" ] },
    { "name": "clang16-x64-rwdi", "description": "clang16 for x64 (RelWithDebInfo)", "inherits": [ "clang16", "rwdi" ] },
    { "name": "clang16-x64-msr", "description": "clang16 for x64 (MinSizeRel)",  "inherits": [ "clang16", "msr" ] },

    { "name": "clang17-x64-debug", "description": "clang17 for x64 (Debug)", "inherits": [ "clang17", "debug" ] },
    { "name": "clang17-x64-release", "description": "clang17 for x64 (Release)", "inherits": [ "clang17", "release" ] },
    { "name": "clang17-x64-rwdi", "description": "clang17 for x64 (RelWithDebInfo)", "inherits": [ "clang17", "rwdi" ] },
    { "name": "clang17-x64-msr", "description": "clang17 for x64 (MinSizeRel)", "inherits": [ "clang17", "msr" ] }
  ]
}
